    <script>
       function ReadMore() {
    var moreImages = document.getElementById("Read_More");
    if (moreImages.style.display === "none" || moreImages.style.display === "") {
        moreImages.style.display = "flex";
        setTimeout(() => moreImages.style.opacity = "1", 100);
    } else {
        moreImages.style.opacity = "0";
        setTimeout(() => moreImages.style.display = "none", 500); 
    }
}

    </script>
